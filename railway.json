{
  "$schema": "https://railway.app/railway.schema.json",
  "services": [
    {
      "name": "backend",
      "builder": "DOCKERFILE",
      "dockerfilePath": "./Dockerfile",
      "healthcheckPath": "/api/books",
      "healthcheckTimeout": 100,
      "ports": "5001:80",
      "restartPolicyType": "ON_FAILURE",
      "restartPolicyMaxRetries": 10
    },
    {
      "name": "frontend",
      "builder": "NIXPACKS",
      "rootDir": "./frontend",
      "healthcheckPath": "/",
      "healthcheckTimeout": 100,
      "restartPolicyType": "ON_FAILURE",
      "restartPolicyMaxRetries": 10
    }
  ]
}